<Window x:Class="TRPGLogArrangeTool.ImagePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRPGLogArrangeTool"
        mc:Ignorable="d"
        Title="画像プレビュー" 
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#CC000000"
        Width="500" Height="500">
    <Grid>
        <Border CornerRadius="8" Background="White" Padding="10">
            <Image x:Name="PreviewImage" Stretch="Uniform"/>
        </Border>
        <Grid Width="32" Height="32" VerticalAlignment="Top" HorizontalAlignment="Right"
              MouseLeftButtonUp="CloseButton_MouseLeftButtonUp">
            <Ellipse Fill="Red"/>
            <Image x:Name="CloseButton" Source="/resource/細いバツのアイコン.png" Height="16" Width="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
